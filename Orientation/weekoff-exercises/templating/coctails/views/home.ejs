<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="../static/style.css">
    <title>Cocktails app</title>
</head>

<body>
    <h1><%= title %></h1>

    <a href="http://localhost:3000">All</a>
    <a href="http://localhost:3000/?alcohol=rum">Rum</a>
    <a href="http://localhost:3000/?alcohol=tequila">Tequila</a>
    <a href="http://localhost:3000/?alcohol=gin">Gin</a>
    <a href="http://localhost:3000/?alcohol=vodka">Vodka</a>

    <h2>Names</h2>
    <ul>
        <% cocktailList.forEach(e => { 
            if(e.isAlcoholic) { %>
        <li> <%= e.name %> <br> <%= e.contains %> </li>
        <% }else{ %>
        <li> <%= `${e.name} (non-alcoholic)` %> <br> <%= e.contains %> </li>
        <% } %>

        <% }); %>
    </ul>
    <h2>Prices</h2>
    <ul>
        <% cocktailList.forEach(e => { %>
        <li> <%= e.price %> Ft </li>
        <% }); %>
    </ul>
    


</body>

</html>